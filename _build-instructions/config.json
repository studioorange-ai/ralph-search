  "validation_rules": {
    "phase_completion": "all_tasks_checked",
    "file_creation": "files_exist_at_specified_paths",
    "code_quality": "scripts_are_executable_and_error_free",
    "content_quality": "templates_have_full_content_not_placeholders"
  },
  "success_criteria": [
    "Can execute: ./orchestrator.sh projects/receiptrally",
    "Produces valid GO/NO-GO decision",
    "All 7 phases pass validation",
    "Documentation is clear for new users"
  ]
