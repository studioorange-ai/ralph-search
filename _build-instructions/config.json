  "prd_file": "build-mre-prd.md",
  "output_directory": "../market-research-engine",
  "phases": [
    {
      "phase": 1,
      "name": "Create Folder Structure",
      "estimated_time": "15 minutes",
      "dependencies": [],
      "deliverables": [
        "Complete directory tree",
        "All subdirectories created"
      ]
    },
    {
      "phase": 2,
      "name": "Create Core Templates",
      "estimated_time": "30 minutes",
      "dependencies": [1],
      "deliverables": [
        "project-intake-form.md",
        "research-prd-template.md",
        "validation-report-template.md"
      ]
    },
    {
      "phase": 3,
      "name": "Create Validator Agents",
      "estimated_time": "45 minutes",
      "dependencies": [2],
      "deliverables": [
        "market-validator.md",
        "avatar-validator.md",
        "pricing-validator.md",
        "gtm-validator.md"
      ]
    },
    {
      "phase": 4,
      "name": "Create Orchestrator Script",
      "estimated_time": "60 minutes",
      "dependencies": [2, 3],
      "deliverables": [
        "orchestrator.sh (executable)",
        "Helper scripts in tools/"
      ]
    },
    {
      "phase": 5,
      "name": "Create Example Project",
      "estimated_time": "30 minutes",
      "dependencies": [2, 4],
      "deliverables": [
        "projects/receiptrally/intake.md",
        "projects/receiptrally/research-prd.md",
